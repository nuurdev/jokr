{
  "name": "jokr",
  "version": "1.0.0",
  "description": "Social platform for sharing funny (and not so funny) jokes.",
  "main": "index.js",
  "engines": {
    "node": "10.15.0",
    "npm": "6.8.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc -p .",
    "ts": "tsc --noEmit && cd client && tsc --noEmit",
    "lint": "npm run ts && eslint . --ext ts,tsx --ignore-pattern node_modules/",
    "lint:fix": "npm run ts && eslint . --ext ts,tsx --ignore-pattern node_modules/ --quiet --fix",
    "stylelint": "stylelint **/*.{css,scss}",
    "stylelint:fix": "stylelint **/*.{css,scss} --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "heroku-postbuild": "npm run build && cd client && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuurdev/jokr.git"
  },
  "keywords": [
    "funny",
    "jokes",
    "humour"
  ],
  "author": "nuurdev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nuurdev/jokr/issues"
  },
  "homepage": "https://github.com/nuurdev/jokr#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/node": "^13.1.2",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.1",
    "stylelint-config-standard": "^19.0.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  }
}
